<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/content"
    android:background="@color/materialcolorpicker__green"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DiscoverWemoActivity"
    tools:showIn="@layout/activity_discover_wemo">

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@mipmap/belkin_wemo_light"
        android:layout_marginLeft="10px"
        android:layout_marginTop="50px"
        android:onClick="discoverWemo"/>

    <TextView
        android:layout_width="200px"
        android:layout_height="200px"
        android:text="@string/wemo_list"
        android:textColor="@color/white"
        android:layout_marginLeft="250px"
        android:layout_marginTop="50px"
        android:textSize="50px"/>

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:onClick="discoverWemo"
        android:layout_marginLeft="0px"
        android:layout_marginTop="300px"
        android:background="@mipmap/belkin_wemo_light"/>

    <TextView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="250px"
        android:layout_marginTop="300px"
        android:text="@string/wemo_list2"
        android:textColor="@color/white"
        android:textSize="50px"/>
</RelativeLayout>
