<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/black"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LifXBulbAction"
    tools:showIn="@layout/activity_lif_xbulb_action">

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@mipmap/power_button"
        android:layout_marginLeft="10px"
        android:layout_marginTop="50px"
        android:onClick="powerOn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power_on"
        android:textColor="@color/white"
        android:layout_marginLeft="250px"
        android:layout_marginTop="80px"
        android:onClick="powerOn"
        android:background="@drawable/buttonselector"
        android:textSize="80px"/>

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:onClick="changeColor"
        android:layout_marginLeft="10px"
        android:layout_marginTop="400px"
        android:background="@mipmap/color_wheel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_color"
        android:textColor="@color/white"
        android:layout_marginLeft="250px"
        android:layout_marginTop="430px"
        android:background="@drawable/buttonselector"
        android:onClick="changeColor"
        android:textSize="80px"/>

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@mipmap/power_button"
        android:layout_marginLeft="10px"
        android:layout_marginTop="750px"
        android:onClick="powerOff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power_off"
        android:textColor="@color/white"
        android:background="@drawable/buttonselector"
        android:onClick="powerOff"
        android:layout_marginLeft="250px"
        android:layout_marginTop="780px"
        android:textSize="80px"/>

</RelativeLayout>
